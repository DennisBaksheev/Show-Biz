@model DBA5.Models.EpisodeBaseViewModel

@{
    ViewBag.Title = "Delete Episode";
}

<h2>Delete Episode</h2>

<div>
    <h3>Are you sure you want to delete this episode?</h3>
    <div>
        <p>
            <strong>Name:</strong> @Model.Name<br />
            <strong>Season:</strong> @Model.SeasonNumber<br />
            <strong>Episode:</strong> @Model.EpisodeNumber<br />
            <strong>Genre:</strong> @Model.Genre<br />
            <strong>Air Date:</strong> @Model.AirDate.ToString("yyyy-MM-dd")<br />
            <strong>Clerk:</strong> @Model.Clerk<br />
            <strong>Premise:</strong> @Model.Premise<br />
            <strong>Image URL:</strong> <a href="@Model.ImageUrl">@Model.ImageUrl</a><br />
            <strong>Video URL:</strong> <a href="@Model.VideoUrl">@Model.VideoUrl</a>
        </p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>
